{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RecommendationResponse",
  "type": "object",
  "required": ["selected_team_id", "confidence", "rationale", "explanation_breakdown"],
  "properties": {
    "selected_team_id": {"type": "string"},
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "rationale": {"type": "string", "maxLength": 180},
    "explanation_breakdown": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["factor", "weight", "description"],
        "properties": {
          "factor": {"type": "string"},
          "weight": {"type": "integer", "minimum": 0, "maximum": 100},
          "description": {"type": "string"}
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "tie_break": {"type": ["string", "null"]}
  },
  "additionalProperties": false
}